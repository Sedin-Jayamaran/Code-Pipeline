<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Superman ‚Ä¢ Static Theme Page</title>
  <meta name="description" content="A sleek, single‚Äëfile static page themed around Superman." />
  <style>
    :root{
      --blue:#0b3d91;      /* primary */
      --red:#c10016;       /* accent */
      --yellow:#ffd200;    /* highlight */
      --ink:#0a0a0a;       /* text */
      --cloud:#f6f7fb;     /* bg */
      --card:#ffffff;      /* surfaces */
      --muted:#65758b;     /* subtext */
      --ring: rgba(12, 83, 230, .3);
      --radius: 18px;
      --shadow: 0 10px 30px rgba(0,0,0,.12);
    }
    *{box-sizing:border-box}
    html,body{margin:0;padding:0}
    body{
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji","Segoe UI Emoji";
      color:var(--ink);
      background: linear-gradient(180deg, var(--cloud) 0%, #eef2ff 40%, #ffffff 100%);
      line-height:1.6;
    }
    a{color:inherit;text-decoration:none}
    .container{max-width:1100px;margin:0 auto;padding:0 20px}
    header{
      position:sticky;top:0;z-index:20;
      backdrop-filter:saturate(160%) blur(8px);
      background:linear-gradient(180deg, rgba(255,255,255,.92), rgba(255,255,255,.7));
      border-bottom:1px solid rgba(12, 18, 46, .08);
    }
    .nav{display:flex;align-items:center;justify-content:space-between;padding:14px 0}
    .brand{display:flex;align-items:center;gap:12px;font-weight:800;letter-spacing:.3px}
    .brand span{font-size:20px}
    .badge{font-size:11px;font-weight:700;background:var(--yellow);color:#111;padding:3px 8px;border-radius:999px;margin-left:6px}

    /* Emblem */
    .emblem{width:38px;height:38px;display:inline-grid;place-items:center;border-radius:10px;
      background: radial-gradient(circle at 30% 30%, #ff4d4d, var(--red) 55%);
      box-shadow:inset 0 -4px 10px rgba(0,0,0,.25), 0 6px 14px rgba(193,0,22,.35);
      border:2px solid #8d0010;
      position:relative;
    }
    .emblem:before, .emblem:after{content:"";position:absolute;inset:6px;border-radius:6px;}
    .emblem:before{border:2px solid var(--yellow);opacity:.85}
    .emblem:after{inset:auto;}
    .s-letter{font-weight:900;font-size:20px;color:var(--yellow);text-shadow:0 1px 0 #8a6b00, 0 2px 8px rgba(0,0,0,.35)}

    /* Hero */
    .hero{padding:80px 0 60px;position:relative;overflow:hidden}
    .hero .bg{
      position:absolute;inset:-80px -40px auto -40px;height:380px;z-index:-1;
      background:
        radial-gradient(60% 60% at 70% 30%, rgba(255,210,0,.18), transparent 60%),
        radial-gradient(60% 60% at 30% 60%, rgba(193,0,22,.15), transparent 65%),
        linear-gradient(135deg, var(--blue), #1a59cc);
      clip-path:polygon(0 0, 100% 0, 100% 70%, 0 100%);
      box-shadow:inset 0 -50px 100px rgba(0,0,0,.12);
    }
    .hero h1{font-size:54px;line-height:1.1;margin:0;color:#fff;text-wrap:balance}
    .hero p{color:#f0f4ff;max-width:720px;margin:16px 0 28px;font-size:18px}
    .cta{display:flex;gap:12px;flex-wrap:wrap}
    .btn{display:inline-flex;align-items:center;gap:10px;font-weight:800;padding:12px 18px;border-radius:999px;border:0;cursor:pointer;transition:transform .12s ease, box-shadow .12s ease}
    .btn:focus{outline:3px solid var(--ring)}
    .btn-primary{background:linear-gradient(180deg, #ffd200, #ffb700);color:#1a1200;box-shadow:0 8px 20px rgba(255,183,0,.35)}
    .btn-primary:hover{transform:translateY(-1px)}
    .btn-ghost{background:rgba(255,255,255,.14);color:#fff;border:1px solid rgba(255,255,255,.4)}

    /* Sections */
    section{padding:56px 0}
    .section-title{font-size:28px;margin:0 0 10px}
    .sub{color:var(--muted);margin:0 0 24px}

    .cards{display:grid;grid-template-columns:repeat(12, 1fr);gap:18px}
    .card{grid-column:span 4;background:var(--card);border-radius:var(--radius);padding:22px;box-shadow:var(--shadow);border:1px solid rgba(12,18,46,.08)}
    .card h3{margin:0 0 6px;font-size:20px}
    .icon{font-size:26px}

    @media (max-width:900px){
      .card{grid-column:span 6}
      .hero h1{font-size:42px}
    }
    @media (max-width:640px){
      .card{grid-column:span 12}
      .hero{padding:64px 0 46px}
      .hero h1{font-size:36px}
    }

    /* Feature band */
    .band{display:grid;grid-template-columns: 1.3fr 1fr;gap:28px;align-items:center}
    .panel{background:var(--card);border-radius:var(--radius);padding:26px;box-shadow:var(--shadow);border:1px solid rgba(12,18,46,.08)}
    .panel p{margin:0;color:#2b3245}

    /* Gallery placeholders */
    .gallery{display:grid;grid-template-columns:repeat(3, 1fr);gap:16px}
    .shot{border-radius:16px;aspect-ratio: 4 / 3;position:relative;overflow:hidden;border:1px solid rgba(12,18,46,.08);box-shadow:var(--shadow)}
    .shot:before{content:"";position:absolute;inset:0;background:
      radial-gradient(60% 90% at 80% 10%, rgba(255,210,0,.25), transparent 40%),
      linear-gradient(135deg, #123a92, #0b3d91 35%, #c10016 90%);
    }
    .shot span{position:absolute;left:12px;bottom:10px;font-weight:700;font-size:14px;color:#fff;text-shadow:0 2px 8px rgba(0,0,0,.5)}

    /* Quote */
    blockquote{margin:0;background:#0b3d91;color:#fff;padding:28px;border-radius:var(--radius);box-shadow:var(--shadow)}
    blockquote p{font-size:18px;margin:0}
    blockquote cite{display:block;margin-top:10px;opacity:.9}

    /* Footer */
    footer{padding:30px 0;border-top:1px dashed rgba(12,18,46,.15);color:#435066}
    .footer-grid{display:flex;gap:18px;justify-content:space-between;flex-wrap:wrap;align-items:center}

    /* Utility */
    .chip{display:inline-flex;align-items:center;gap:8px;padding:6px 10px;border-radius:999px;background:#f1f5ff;border:1px solid rgba(12,18,46,.08);font-weight:700;color:#274585}
    .sr-only{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border:0}
  </style>
</head>
<body>
